<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContentMatchParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParent0dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="WrapContent0dp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Text" parent="MatchParentWrapContent">
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/base_text_size</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="LoadingProgress">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:indeterminateDrawable">@drawable/loading_circle</item>
    </style>

    <style name="LoadingProgress.LayoutCenter">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditText" parent="MatchParentWrapContent">
        <item name="android:editTextColor">?attr/text_primary</item>
        <item name="android:textColorHint">?attr/text_primary</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:textColor">?attr/text_primary</item>
    </style>



    <style name="Button" parent="MatchParentWrapContent" />

    <style name="Button.Active">
        <item name="android:background">@drawable/background_active_button</item>
        <item name="android:textColor">?attr/button_active_text_color</item>
    </style>

    <style name="Button.InActive">
        <item name="android:background">@drawable/background_inactive_button</item>
        <item name="android:textColor">?attr/button_inactive_text_color</item>
    </style>


    <style name="BottomDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalSheet</item>
    </style>

    <style name="ModalSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog</item>
    </style>


</resources>